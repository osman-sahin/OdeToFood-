@page
@model ListModel
@{
    ViewData["Title"] = "Restaurants";
}

@*Model bağlama bir kullanıcıdan alınan verilerin alınması*@
@*Asp-for Modellerve html arasında bağlayıcı parametre*@
<h1>Restaurants</h1>


<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input  type="search"  class="form-control border-success" asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-outline-success text-lg-center">
                  <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}


<a asp-page=".\Edit" class="btn btn-outline-success">Add New</a>

@section footer{ 
    <div>@Model.Message</div>
}